                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_recovered"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:text="1,574,854"
                                android:textAlignment="textEnd"
                                android:textColor="#FFFFFF"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="176dp"
                            android:layout_height="128dp"
                            android:background="@drawable/ic_rectangle_8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label1_death_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:text="ผู้เสียชีวิตในจังหวัด"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/new_death_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:text="+12,456"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/label2_death_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
