                                android:id="@+id/new_infected_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:text="+12,456"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/label3_province_infected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:text="สะสม"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_infected_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:text="123,456"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="176dp"
                            android:layout_height="167dp"
                            android:background="@drawable/ic_rectangle_10"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label1_country_infected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="7dp"
                                android:text="ผู้ติดเชื้อในประเทศ"
                                android:textAlignment="textEnd"
                                android:textColor="@color/white"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                            <TextView
